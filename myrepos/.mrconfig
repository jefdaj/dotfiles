[myrepos/ortholang/ortholang-userdata]
checkout = \
  git clone 'ssh://zilputer//mnt/data/users/jefdaj/myrepos/ortholang/ortholang-userdata' ortholang-userdata;
  git -C ortholang-userdata remote rename origin zilputer;
  git -C ortholang-userdata remote add origin 'git@bitbucket.org:jefdaj/ortholang-userdata';
  git -C ortholang-userdata annex init $(hostname);
  git -C ortholang-userdata config remote.origin.annex-ignore true;
  git -C ortholang-userdata fetch --all --prune
sync = \
  git pull origin && git push origin \
  && git annex sync && git annex sync --content --jobs 8

